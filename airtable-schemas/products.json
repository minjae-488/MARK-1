{
    "tableName": "Products",
    "description": "판매 상품 정보 및 가격 정책 관리",
    "fields": [
        {
            "name": "Product ID",
            "type": "singleLineText",
            "description": "자체 상품 관리 코드"
        },
        {
            "name": "Product Name",
            "type": "singleLineText",
            "description": "상품명"
        },
        {
            "name": "Supplier",
            "type": "link",
            "linkedTable": "Suppliers",
            "description": "공급처 정보"
        },
        {
            "name": "Cost Price",
            "type": "currency",
            "currency": "KRW",
            "precision": 0,
            "description": "매입 원가"
        },
        {
            "name": "Selling Price",
            "type": "currency",
            "currency": "KRW",
            "precision": 0,
            "description": "판매가"
        },
        {
            "name": "Margin Rate",
            "type": "formula",
            "formula": "IF({Cost Price} > 0, ({Selling Price} - {Cost Price}) / {Cost Price}, 0)",
            "description": "마진율 (자동 계산)"
        },
        {
            "name": "Stock Status",
            "type": "singleSelect",
            "options": [
                "In Stock",
                "Low Stock",
                "Out of Stock"
            ],
            "description": "재고 상태"
        },
        {
            "name": "Smartstore Link",
            "type": "url",
            "description": "스마트스토어 상품 페이지 링크"
        },
        {
            "name": "Memo",
            "type": "multilineText",
            "description": "상품 관련 메모"
        }
    ]
}